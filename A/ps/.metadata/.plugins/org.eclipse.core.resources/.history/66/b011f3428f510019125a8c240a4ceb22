package Model;
import Social.IllegalProcedureException;



public interface EmployeeProc {
	
	
	public void addEmployee(Employee employee) throws IllegalProcedureException;

	public void removePerson(Employee employee) throws IllegalProcedureException;
	
	public void addAccount( Team team) throws IllegalProcedureException;

	public void removeAccount( Team team) throws IllegalProcedureException;

	public  void readEmployee();
	
	public  void readTeam();

	public  Employee writeEmployee();
	
	public  Employee writeTeam();

	public  void generateStatement();

}
